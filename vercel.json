{
  "version": 2,
  "builds": [
    { "src": "app.py",          "use": "@vercel/python" },
    { "src": "requirements.txt","use": "@vercel/python" }
  ],
  "routes": [
    { "handle": "filesystem" },               // ← serve any matching file
    { "src": "/(.*)",      "dest": "app.py" } // ← then fall back to your Flask app
  ]
}
